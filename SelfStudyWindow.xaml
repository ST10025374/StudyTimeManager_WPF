<Window x:Class="ProgPoe_WPF.SelfStudyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgPoePart1New"
        mc:Ignorable="d"
        Title="SelfStudyWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/ProgPoe_ClassLibrary;component/Image/Background1.png"/>
    </Window.Background>
    <Grid x:Name="btnGoBack">
        <Label Content="Amount of hours  spent studying:" HorizontalAlignment="Left" Margin="50,184,0,0" VerticalAlignment="Top" Width="298" FontSize="18" FontWeight="Bold"/>
        <TextBox x:Name="txtNumberOfSpentWorking" HorizontalAlignment="Left" Margin="362,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" PreviewTextInput="txtNumberOfSpentWorking_PreviewTextInput"/>
        <Button x:Name="btnAddSelfStudyHours" Content="Record" HorizontalAlignment="Left" Margin="362,272,0,0" VerticalAlignment="Top" Width="102" Click="btnAddSelfStudy_Click" FontSize="14" FontWeight="Bold" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"/>
        <Label Content="Pick date spent studying:" HorizontalAlignment="Left" Margin="124,230,0,0" VerticalAlignment="Top" Width="224" FontWeight="Bold" FontSize="18"/>
        <DatePicker x:Name="dtDateWorked" HorizontalAlignment="Left" Margin="362,236,0,0" VerticalAlignment="Top"/>
        <Label Content="Self Study Weekly Session" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="304" FontSize="36" FontFamily="Haettenschweiler" Height="56"/>
        <Button x:Name="btnGoBack1" Content="&lt;- Go Back" HorizontalAlignment="Left" Margin="362,310,0,0" VerticalAlignment="Top" Width="102" Click="btnGoBack_Click" FontSize="14" FontWeight="Bold" Background="#FF9957ED"/>
        <Label x:Name="lbl1" Content="Self study hours left for current week:" HorizontalAlignment="Left" Margin="363,105,0,0" VerticalAlignment="Top" Width="333" FontWeight="Bold" FontSize="18" Foreground="Black"/>
        <Label x:Name="lblModuleCode" Content="Code" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top" Width="304" FontWeight="Bold" FontSize="36" Foreground="Black"/>
        <Label x:Name="lblHoursLeft" Content="0" HorizontalAlignment="Left" Margin="701,105,0,0" VerticalAlignment="Top" Width="89" FontWeight="Bold" FontSize="18" Foreground="White"/>
        <ListBox x:Name="lstDisplaySessions" Margin="506,198,38,101" Background="White"/>
        <Label x:Name="lbl2" Content="Weekly self study hours required:" HorizontalAlignment="Left" Margin="400,76,0,0" VerticalAlignment="Top" Width="296" FontWeight="Bold" FontSize="18" Foreground="Black"/>
        <Label x:Name="lblHoursRequired" Content="0" HorizontalAlignment="Left" Margin="701,76,0,0" VerticalAlignment="Top" Width="89" FontWeight="Bold" FontSize="18" Foreground="White"/>
        <Label Content="Sessions" HorizontalAlignment="Left" Margin="506,144,0,0" VerticalAlignment="Top" Width="174" FontSize="36" FontWeight="Bold" Foreground="White" FontFamily="Chiller" Height="49"/>
    </Grid>
</Window>
